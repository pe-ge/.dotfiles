! fonts
URxvt*font:                 xft:DejaVu Sans Mono for Powerline:regular:size=12
URxvt*imFont:               xft:DejaVu Sans Mono for Powerline:regular:size=12
URxvt*boldFont:             xft:DejaVu Sans Mono for Powerline:bold:size=12
URxvt*italicFont:           xft:DejaVu Sans Mono for Powerline:italic:size=12
URxvt*boldItalicFont:       xft:DejaVu Sans Mono for Powerline:bold:italic:size=12

URxvt.clipboard.autocopy: true

URxvt.saveLines: 12000
URxvt.scrollstyle: plain
URxvt.pointerBlank: true
URxvt.cutchars: '`"&()*,;<=>?@[]^{|}:~'

Xcursor.theme: Human
! reduce font spacing
URxvt.letterSpace: -1

! clickable URLs
URxvt.perl-ext-common: default,matcher,resize-font
URxvt.url-launcher: /usr/bin/opera
URxvt.matcher.button: 1


! Solarized color scheme for the X Window System
!
! http://ethanschoonover.com/solarized


